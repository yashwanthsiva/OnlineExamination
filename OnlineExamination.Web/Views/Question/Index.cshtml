
@model PagedResult<OnlineExamination.ViewModels.QuestionsViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<h1>Exam Papers</h1>

<div>
    <br />
    <a asp-action="Create" asp-controller="Question" class="btn btn-primary">Create</a>
    <div>
        <table id="questionGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Questions</th>
                    <th>Option 1</th>
                    <th>Option 2</th>
                    <th>Option 3</th>
                    <th>Option 4</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>@item.Question</td>
                        <td>@item.Option1</td>
                        <td>@item.Option2</td>
                        <td>@item.Option3</td>
                        <td>@item.Option4</td>
                    </tr>
                }
            </tbody>
        </table>
        @*<cs-pager cs-paging-pagesize=(int)Model.PageSize
                  cs-paging-pagenumber=(int)Model.PageNumber
                  cs-paging-totalitems=(int)Model.TotalItems
                  cs-pagenumber-param="pagenumber"
                  asp-controller="Question"
                  asp-action="Index"
                  cs-pager-li-current-class="page-item active"
                  cs-pager-li-other-class="page-item"
                  cs-pager-li-non-active-class="page-item disabled"
                  cs-pager-link-current-class="page-link"
                  cs-pager-link-other-class="page-link"
        </cs-pager>*@
        <cs-pager cs-paging-pagesize=(int)Model.PageSize
                  cs-paging-pagenumber=(int)Model.PageNumber
                  cs-paging-totalitems=(int)Model.TotalItems
                  cs-pagenumber-param="pagenumber"
                  asp-controller="Question"
                  asp-action="Index"
                  cs-pager-li-current-class="page-item active"
                  cs-pager-li-other-class="page-item"
                  cs-pager-li-non-active-class="page-item disabled"
                  cs-pager-link-current-class="page-link"
                  cs-pager-link-other-class="page-link">

        </cs-pager>
    </div>
</div>
@section scripts{ 
<script>
    $(document).ready(function () {
        $('questionGrid').DataTable({
            "paging": false,
            "filter": true
        });
    });
</script>
}
